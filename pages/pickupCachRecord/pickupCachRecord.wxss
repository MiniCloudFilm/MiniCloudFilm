.item{
   height: 180rpx; 
  border-bottom: 1rpx solid #e3e3e3;
  width: 100%;
}
.item .type{
  font-size:30rpx;
  color: #2e3135;
}
.item .time{
  font-size: 12px;
  color: #969ba1;
}
.left{
  float: left;
  width: 60%;
  padding-left: 20rpx;
  padding-top: 14rpx;
}
.right{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  float: right;
  font-size: 44rpx;
  color: #2e3135;
  padding-right: 20rpx;
}

.right .time{
  text-align: right;
  color: orange
}
.right text:first-child{
  display: block;
  font-weight: bold;
  height: 96rpx;
  line-height: 96rpx
}