/* pages/patientReg/patientReg.wxss */
.from-box {
  margin-top: 30px;
} 
form{
  width: 100%;
}
.inputContainer{
  padding: 0 52rpx;
  margin-top:50rpx;
  display: flex;
}
/* 删除 */
.iconClear{
  width:80rpx;
  height:70rpx;
  padding-top: 10rpx;
  text-align: center;
  border-bottom: 2rpx solid rgba(187, 187, 187, 1);
}

/* 验证码按钮 */
button[plain].code{
  font-size:28rpx;
  color:#035EAD;
  padding: 0;
  border-radius: 0rpx;
  text-align: center;
  width:210rpx;
  height:82rpx;
  line-height:82rpx;
  background-color: white;
  border: 0 solid transparent;
  border-bottom: 2rpx solid rgba(187, 187, 187, 1);
}

/* 密码框 */
.password-box .switchButton{
  width:100rpx;
  height:80rpx;
  line-height: 104rpx;
  text-align: center;
  border-bottom: 2rpx solid rgba(187, 187, 187, 1);
}
.password-box image{
  width: 40%;
  height: 50%;
} 

/* 密码框 */

.code:active{
  background-color: #f7f7f7;
}
.placeholder {
  font-size: 14px;
  color: #ccc; 
}

input {
  height: 80rpx; 
  color: #616569;
  font-family: Microsoft Yahei;
  border-bottom: 2rpx solid rgba(187, 187, 187, 1);
  padding-left:20rpx;
  flex: 1;
}

.section{
  margin-top: 50rpx; 
}

.submitButton {
  margin: 80rpx 52rpx 0rpx 56rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 180rpx;
  background-color: rgba(3, 94, 173, 0.09);
  color: #1C7EFF;
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
  border: 2rpx solid #1C7EFF;
}
 
picker{
  width:100%;
  text-align: center;
  font-size:28rpx;
  color:#616569;
} 
.picker image{
  width:18rpx;
  height:10rpx;
  margin-left:20rpx;
}

/* 同意协议 */
.agree-box {
  font-size: 10px;
  text-align: center;
  margin-top: 40rpx;
}

.agree {
  color: rgba(3, 94, 173, 1);
  font-family: Arial;
}

.mobileStyle{
  color: rgba(187, 187, 187, 0.8);
}

/* 同意协议 */
/* 规则提示层  */
.isRuleShow{
    display: block;
}
.isRuleHide{
    display: none;
}
.ruleZhezhao{
    height: 100%;
    width: 100%;
    position: fixed;
    background-color:rgba(0, 0, 0, .5);
    z-index: 2;
    top: 0;
    left: 0;
}
.ruleZhezhaoContent{
    padding: 2rpx 0 20rpx 0;
    width: 90%;
    height:93%;
    background: #fff;
    margin: 5% auto;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    position: relative;
}
.ruleZhezhaoText{
    width: 94%;
    color: #55585a;
    align-items: center;
    margin: 20rpx 0;
    flex: 1;
    overflow: auto;
}
.ruleZhezhaoText text{
    font-size: 26rpx;
    display: block;
    line-height: 40rpx;
}
.titleH1{
  text-align:center;
  font-weight:bolder;
  font-size:30rpx;
  padding-bottom:5px;

}
.textH2{
  font-weight: bolder;
}
button.ruleHide{
  width: 60%;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background-color: rgba(3, 94, 173, 0.09);
  color: #1C7EFF;
  font-size: 26rpx;
  text-align: center;
  font-family: Arial;
  border: 2rpx solid #1C7EFF;
}
/*  end  */
