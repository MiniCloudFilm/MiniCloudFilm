/* pages/login/login.wxss */

.logo {
  margin-top: 80rpx;
  text-align: center;
}

.logo image {
  width: 76px;
  height: 37px;
}

.main {
  width: 100%;
}

.navbar {
  margin-top: 80rpx; 
  width: 100%;
}

.navbar .item { 
  position: relative; 
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #ccc;
  font-family: Microsoft YaHei;
}

.navbar .item.active {
  color: #035ead; 
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  right: 0;
  height: 4rpx;
  width: 80rpx;
  background: #035ead;
  /* font-size: 24rpx; */
  color: #666;
  text-align: center;
  font-family: Microsoft YaHei;
}

.from-box {
  margin-top: 30px;
}

.from-box, .from-box view {
  width: 100%;
}

.from {
  width: 100%;
}

.placeholder {
  font-size: 14px;
  color: #ccc; 
}

.input {
  margin: 25px 25px;
  height: 40px;
  border-radius: 90px;
  color:#616569;
  font-family: Microsoft Yahei;
  border: 1px solid rgba(187, 187, 187, 1);
  padding-left:30rpx;
}

button {
  margin: 30px 25px;
  height: 40px;
  line-height: 40px;
  border-radius: 90px;
  background-color: rgba(3, 94, 173, 0.09);
  color: rgba(3, 94, 173, 1);
  font-size: 14px;
  text-align: center;
  font-family: Arial;
  border: 1px solid rgba(3, 94, 173, 1);
}

.forgetPas {
  font-size: 10px;
  text-align: center;
  padding:20rpx 0;
}

.forgetPas navigator {
  color: rgba(3, 94, 173, 1);
  font-family: Arial;
}

.register-box {
  width: 100%;
  position: absolute;
  bottom: 0;
}

.title-box { 
  width: 100%; 
}  
.title {
  width: 20%;
  text-align: center;
  font-size: 20rpx;
  color: #ccc;
} 
.start,.end{
  position: relative;
}
.start:before, .end:before {
  content: "";
  display: block;
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  height: 1px; 
  border-top:1px solid #ccc;
}

.sel-register {
  height: 120rpx;
  width: 100%;
  display: flex;
}

.sel-register navigator {
  width: 100%;
  text-align: center;
  line-height: 120rpx;
  color: rgba(3, 94, 173, 1);
  font-size: 28rpx;
  font-family: Arial;
  border-radius: 5px;
}
