<view class="page-body">
  <form bindsubmit="formSubmit">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd weui-cell__hd_in-select-after">
          <view class="weui-label">地区</view>
        </view>
        <view class="weui-cell__ft"> 
          <picker mode="multiSelector" bindcolumnchange="bindAreaColumnChange" bindchange="bindAreaChange" value="{{areaIndex}}" range="{{areaList}}" range-key="{{'areaName'}}">
            <view class="weui-select">{{areaList[2][areaIndex[2]].areaName?areaList[2][areaIndex[2]].areaName:(areaList[1][areaIndex[1]].areaName?areaList[1][areaIndex[1]].areaName:areaList[0][areaIndex[0]].areaName)}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd weui-cell__hd_in-select-after">
          <view class="weui-label">医院</view>
        </view>
        <view class="weui-cell__ft">
          <picker bindchange="bindHospitalChange" value="{{hospitalIndex}}" range="{{hospital}}">
            <view class="weui-select">{{hospital[hospitalIndex]}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd weui-cell__hd_in-select-after">
          <view class="weui-label">科室</view>
        </view>
        <view class="weui-cell__ft">
          <picker bindchange="bindDepartmentChange" value="{{departmentIndex}}" range="{{department}}" custom-item="{{customItem}}">
            <view class="weui-select">{{department[departmentIndex]}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd weui-cell__hd_in-select-after">
          <view class="weui-label">职称</view>
        </view>
        <view class="weui-cell__ft">
          <picker bindchange="bindTitleChange" value="{{titleIndex}}" range="{{doctorLevel}}" custom-item="{{customItem}}">
            <view class="weui-select">{{doctorLevel[titleIndex]}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd weui-cell__hd_in-select-after">
          <view class="weui-label">年龄</view>
        </view>
        <view class="weui-cell__ft">
          <picker bindchange="bindTitleChange" value="{{titleIndex}}" range="{{title}}" custom-item="{{customItem}}">
            <view class="weui-select">{{title[titleIndex]}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd weui-cell__hd_in-select-after">
          <view class="weui-label">金额</view>
        </view>
        <view class="weui-cell__ft">
          <picker bindchange="bindTitleChange" value="{{titleIndex}}" range="{{title}}" custom-item="{{customItem}}">
            <view class="weui-select">{{title[titleIndex]}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd weui-cell__hd_in-select-after">
          <view class="weui-label">医师资格证</view>
        </view>
        <view class="weui-cell__ft">
          <picker bindchange="bindTitleChange" value="{{titleIndex}}" range="{{title}}" custom-item="{{customItem}}">
            <view class="weui-select">{{title[titleIndex]}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cells__title">简介</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <textarea class="weui-textarea" placeholder="请输入" placeholder-class='placeholder' style="height: 4.3em" />
          </view>
        </view>
      </view>
      <view class="weui-cells__title">头像上传</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-uploader__bd">
            <view class="weui-uploader__files" id="uploaderFiles">
              <block wx:for="{{head}}" wx:key="*this">
                <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">
                  <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                </view>
              </block>
              <view class="weui-uploader__input-box">
                <view class="weui-uploader__input" bindtap="chooseHead"></view>
              </view>
            </view>
          </view>
        </view>
      </view>
      <view class="weui-cells__title">资质证书</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-uploader__bd">
            <view class="weui-uploader__files" id="uploaderFiles">
              <block wx:for="{{image}}" wx:key="*this">
                <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">
                  <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                </view>
              </block>
              <view class="weui-uploader__input-box">
                <view class="weui-uploader__input" bindtap="chooseImage"></view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="weui-btn-area">
      <button class="weui-btn vsub" formType="submit">确认</button>
    </view>
  </form>
</view>