/* pages/myAccount/account.wxss */
.ac-top{
  width: 90%;
  margin: auto;
  padding-top:30rpx;
  font-size: 28rpx;
  color: #2e3135; 
  height: 35rpx;
  line-height: 35rpx;
}
.ac-top text{
  display: block;
  padding: 10rpx;
  border-radius: 8rpx;
}
.ac-top text:first-child{
  float: left;
}
.ac-top text:last-child{
  float: right;
  color: #035EAD;
}
.ac-top text:last-child:active{
 background-color: #F8F8F8;
}
.ac-top navigator{
  display: block;
  float: right;
}
.amount{
  font-size: 80rpx;
  font-weight: bold;
  padding: 112rpx;
}
.btn{
  width: 90%;
  margin:30rpx 0;
 }
.tip{
  font-size: 24rpx;
}