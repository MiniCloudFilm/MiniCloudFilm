/* pages/patientReg/patientReg.wxss */
.from-box {
  margin-top: 30px;
} 
form, form>view{
  width: 100%;
} 
.code-box{
  display: flex;
  height: 82rpx;
  margin:0 52rpx;
}
button[plain].code{
  font-size:28rpx;
  color:#035EAD;
  padding: 0;
  border-radius: 0rpx;
  text-align: center;
  width:210rpx;
  height:82rpx;
  line-height:82rpx;
  background-color: white;
  border: 0 solid transparent;
  border-bottom: 2rpx solid rgba(187, 187, 187, 1);
}

input.codeInput{
  flex: 1;
  margin:0rpx;
}
.code:active{
  background-color: #f7f7f7;
}
.placeholder {
  font-size: 14px;
  color: #ccc; 
}

input { 
  margin: 50rpx 52rpx 50rpx 56rpx; 
  height: 80rpx; 
  color: #616569;
  font-family: Microsoft Yahei;
  border-bottom: 2rpx solid rgba(187, 187, 187, 1);
  padding-left:20rpx;
}

.submitButton {
  margin: 80rpx 52rpx 0rpx 56rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 180rpx;
  background-color: rgba(3, 94, 173, 0.09);
  color: #1C7EFF;
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
  border: 2rpx solid #1C7EFF;
}
 
picker{
  width:100%;
  text-align: center;
  font-size:28rpx;
  color:#616569;
} 
.picker image{
  width:18rpx;
  height:10rpx;
  margin-left:20rpx;
}