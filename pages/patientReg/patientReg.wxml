 <view class="container"> 
  <form bindsubmit='formSubmit'  > 
  <view>
    <input type='text' name="name" placeholder='请输入姓名' placeholder-class="placeholder"></input> 
  </view>
  <view>
    <input type='number' name="idCard" placeholder='请输入身份证号' placeholder-class="placeholder" bindblur="checkIdcard"></input> 
  </view>
  <view>
    <input type='number' name="mobile" placeholder='请输入手机号' placeholder-class="placeholder" bindinput="mobileNum" maxlength="11"></input> 
  </view>
  <view class="code-box">
    <input type='number' name="code" placeholder='请输入验证码' placeholder-class="placeholder"></input>
    <view class="code" bindtap='sendCode'>获取验证码</view>
  </view>
  <view>
    <input type='number'name="pwd" placeholder='设置密码' placeholder-class="placeholder" bindblur="firstPwd"></input>
  </view>
  <view>
    <input type='number' placeholder='确认密码' placeholder-class="placeholder" bindblur="secondPwd"></input> 
  </view>
  <view class="section"> 
  <picker bindchange="bindPickerChange" name="userType" value="{{array[index].value}}" range="{{array}}"  range-key="{{'name'}}">
     <view class="picker"> 
        <text> {{array[index].name}}</text>
        <image src="/image/arrow-down.png"></image>
        </view>
  </picker>
</view>  
  <view>
    <button formType="submit">注册</button>
  </view>
  </form>
 </view>