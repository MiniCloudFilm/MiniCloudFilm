@import "../../iconfont.wxss";

.page-body {
  width: 100%; 
  background:#f7f7f7;
}
page{
  height: 100%;
  background:#f7f7f7;
}
.page-section {
  width: 100%;
  padding-bottom: 30rpx; 
}

swiper {
  height: 400rpx;
}

image {
  width: 100%; 
  height:400rpx;
} 
.nav{
  position:relative;
  height:180rpx;
  text-align: center;
  background: #ffffff;
}
.nav:before{
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #d7dae0;
  color: #d9d9d9; 

}
.nav:after{
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  background-color:#d7dae0; 
} 
.navT{  
  padding-top:16rpx;
  height:100rpx;
}
.navT image{   
  width:100rpx;
  height:100rpx;
  text-align: bottom;
}
.nav text{
  font-size:24rpx;
} 
.main{
  height:500rpx;
}
.new_desc{
  padding-top: 2rpx;
  line-height: 1.6;
}
